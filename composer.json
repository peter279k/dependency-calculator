{
    "name": "lee/dependency-calculator",
    "description": "This is about simple calculator with depency injection pattern",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-gmp": "*",
        "ext-bcmath": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lee\\Calculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lee\\Calculator\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "peter279k",
            "email": "peter279k@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "php-coveralls/php-coveralls": "^2.5"
    }
}
